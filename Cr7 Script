-- Sol tarafa 6 buton ekleme

local buttonSize = UDim2.new(0, 100, 0, 27)

local buttonSpacing = 8

local buttonNames = {"Home", "Player", "Combat", "Auras", "Teleport", "Esp"}

for i = 1, 6 do

local button = Instance.new("TextButton")

button.Size = buttonSize

button.Position = UDim2.new(0, 10, 0, (i - 1) * (buttonSize.Y.Offset + buttonSpacing) + 42)

button.BackgroundColor3 = Color3.fromRGB(48, 48, 48)

button.Text = buttonNames[i]

button.TextColor3 = Color3.fromRGB(255, 255, 255)

button.Parent = frame

-- Etrafına siyah çizgi ekleme

local uiStroke = Instance.new("UIStroke")

uiStroke.Parent = button

uiStroke.Thickness = 2.7 -- Çizgi kalınlığı

uiStroke.Color = Color3.fromRGB(255, 255, 244) -- Beyaz renk

uiStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border -- Sadece sınırda uygulanmasını sağlar

end

-- Çalışan fonksiyonlar

local frameVisible = true

local canToggleWithCtrl = false

closeButton.MouseButton1Click:Connect(function()

frame.Visible = false

showButton.Visible = true

frameVisible = false

canToggleWithCtrl = true

end)

closeButtonX.MouseButton1Click:Connect(function()

frame.Visible = false

showButton.Visible = false

frameVisible = false

canToggleWithCtrl = false

end)

showButton.MouseButton1Click:Connect(function()

frame.Visible = true

showButton.Visible = false

frameVisible = true

end)

-- Üst çerçeveden hareket ettirme işlevi

local dragToggle = nil

local dragInput = nil

local dragStart = nil

local startPos = nil

local function update(input)

local delta = input.Position - dragStart

frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)

end

topBar.InputBegan:Connect(function(input)

if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then

dragToggle = true

dragStart = input.Position

startPos = frame.Position

input.Changed:Connect(function()

if not input.UserInputState == Enum.UserInputState.Change then

dragToggle = false

end

end)

end

end)

topBar.InputChanged:Connect(function(input)

if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseMovement then

dragInput = input

end

end)

game:GetService("UserInputService").InputChanged:Connect(function(input)

if dragToggle and input == dragInput then

update(input)

end

end)

-- Sayfayı gösterme ve konumlandırma

local pageContainer = Instance.new("Frame")

pageContainer.Size = UDim2.new(0, 100, 0, 100)

pageContainer.Position = UDim2.new(1, -110, 1, -110)

pageContainer.BackgroundTransparency = 1

pageContainer.Parent = frame

local pageFrame = Instance.new("Frame")

pageFrame.Size = UDim2.new(1, 0, 1, 0)

pageFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)

pageFrame.BackgroundTransparency = 0.1

pageFrame.Visible = false

pageFrame.Parent = pageContainer

local pageLabel = Instance.new("TextLabel")

pageLabel.Size = UDim2.new(1, 0, 1, 0)

pageLabel.Text = "Sayfa İçeriği"

pageLabel.TextColor3 = Color3.fromRGB(0, 0, 0)

pageLabel.TextScaled = true

pageLabel.BackgroundTransparency = 1

pageLabel.Parent = pageFrame

-- Butonlara tıklanınca sayfa gösterme

for i, button in ipairs(frame:GetChildren()) do

if button:IsA("TextButton") then

button.MouseButton1Click:Connect(function()

-- Sayfayı göster

pageFrame.Visible = true

pageLabel.Text = button.Text .. "" -- Her butona tıklanıldığında sayfa ismini değiştirir

pageFrame.Size = UDim2.new(3.6, 0, 2.2, 0) -- Sayfa boyutunu büyütme

pageFrame.Position = UDim2.new(-2.5, 0, -1.1, 0) -- Sayfa konumunu sola ve yukarıya kaydırma

end)

end

end

-- RGB renk değiştiren çizgi eklemek için fonksiyon
local uiStroke = Instance.new("UIStroke")
local rgbLine = Instance.new("Frame")

-- Frame (çizginin) özellikleri
local rgbLine = Instance.new("Frame")
rgbLine.Size = UDim2.new(0, 484, 0, 29)  -- Boyutunu ayarlayabilirsiniz
rgbLine.Position = UDim2.new(0.5, -242, 0.5, -125)  -- Pozisyonunu ayarlayabilirsiniz
rgbLine.BackgroundTransparency = 1  -- Arka planı tam saydam yap
rgbLine.Parent = frame  -- Ana çerçevenin içine ekle

-- UIStroke (çizginin kenar çizgisi) özellikleri
local uiStroke = Instance.new("UIStroke")
uiStroke.Parent = rgbLine
uiStroke.Thickness = 5  -- Çizginin kalınlığı
uiStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border  -- Çizginin sadece sınırında olması
uiStroke.Color = Color3.fromRGB(255, 0, 0)  -- Başlangıç rengi kırmızı

-- Sürekli renk değişimi fonksiyonu
local function changeColor()
    local colors = {
        Color3.fromRGB(255, 0, 0),  -- Kırmızı
        Color3.fromRGB(0, 255, 0),  -- Yeşil
        Color3.fromRGB(0, 0, 255),  -- Mavi
        Color3.fromRGB(255, 255, 0), -- Sarı
        Color3.fromRGB(255, 165, 0), -- Turuncu
        Color3.fromRGB(75, 0, 130),  -- Çivit
    }

    local index = 1

    -- Sürekli olarak renkleri değiştir
    while true do
        -- UIStroke rengini (kenar çizgisi) değiştir
        uiStroke.Color = colors[index]
        -- Frame arka plan rengini değiştir
        rgbLine.BackgroundColor3 = colors[index]

        index = index + 1

        -- Eğer index dizi sonuna gelirse, başa dön
        if index > #colors then
            index = 1
        end

        wait(0.5)  -- Renk değişim süresi (yarım saniye)
    end
end

-- Renk değiştirme fonksiyonunu başlat
changeColor()
